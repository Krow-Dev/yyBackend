{
  "compilerOptions": {
    /* Output and Layout */
    "target": "ES2020",                         // Modern syntax support
    "module": "commonjs",                       // For Node.js
    "rootDir": "./src",                         // Source code location
    "outDir": "./dist",                         // Compiled JS output
    "esModuleInterop": true,                    // Allow `import express from 'express'`
    "resolveJsonModule": true,                  // Allow importing JSON
    "sourceMap": true,                          // For debugging
    "declaration": true,                        // Generate .d.ts files
    "declarationMap": true,                     // Map .d.ts to source

    /* Type Support */
    "lib": ["ES2020"],                          // Environment support
    "types": ["node", "@types/express"],        // Explicit type support
    "skipLibCheck": true,                       // Skip type checks on dependencies

    /* Strict Type Checks */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Other Good Practices */
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],                   // Include all TS files in src
  "exclude": ["node_modules", "dist", "**/*.test.ts"] // Exclude build output and tests
}
