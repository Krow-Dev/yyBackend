{
  "compilerOptions": {
    /* Output and Layout */
    "target": "ES2020",                      // Modern JS output
    "module": "commonjs",                    // Node.js compatible
    "rootDir": "./src",                      // Source folder
    "outDir": "./dist",                      // Compiled JS output
    "esModuleInterop": true,                 // Default import compatibility
    "resolveJsonModule": true,               // Import JSON files
    "sourceMap": true,                       // Generate .map files
    "declaration": false,                    // No .d.ts files for production
    "declarationMap": false,                 // No .d.ts map files for production

    /* Type Support */
    "lib": ["ES2020"],                        // Environment libs
    "types": ["node"],                        // Node.js types
    "skipLibCheck": true,                     // Faster build

    /* Strict Type Checks */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Good Practices */
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
